<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Campgrounds name:</label>
                    <input type="text" name="campground[title]" id="title" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Campgrounds location:</label>
                    <input type="text" name="campground[location]" id="location" class="form-control" required>
                </div>              
                <div class="mb-3">
                    <label for="image" class="form-label">Select images:</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>                      
                <div class="mb-3">
                    <label for="description" class="form-label">Campgrounds description:</label>
                    <textarea name="campground[description]" id="description" class="form-control" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Campground price:</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input name="campground[price]" id="price" type="text" class="form-control"
                            aria-label="Amount (to the nearest dollar)" placeholder="0.00" required>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <button class="btn btn-success mb-3">Add Campground</button>
            </form>
            <a href="/campgrounds" class="btn btn-danger">Cancel</a>
        </div>
    </div>

