<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Current Images</h1>
        <form action="/campgrounds/<%= campground._id %>/images?_method=DELETE" method="POST">
            <div class="col-12 row d-flex justify-content-evenly flex-wrap">
            <% campground.images.forEach(function(img, i){%> 
                <div class="col-3">
                    <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=img.filename%>">
                        <label for="image-<%= i %>">Delete?</label>
                    </div>
                </div>
            <% }) %> 
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-danger btn-lg mt-3 p-3 flex-grow-1" id="deleteImagesButton" disabled>Delete</button>
            </div>
        </form>
        <h3 class="text-center text-decoration-underline mt-4">Upload New images</h3>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>/images?_method=PUT" method="post" novalidate
                class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="image" class="form-label">Select images:</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <button class="btn btn-primary mb-3">Upload</button>
            </form>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-danger">Cancel</a>
        </div>
    </div>

    <script src="/js/imageEditPage.js"></script>