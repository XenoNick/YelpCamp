<% layout('layouts/boilerplate') %>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <b><%= err.name %></b>
                </h4>
                <h5><b><%= err.message %></b></h5>
                <% if (process.env.NODE_ENV !== "production") {%>
                    <p><%= err.stack %></p>
                <% } %>  
            </div>
        </div>
    </div>